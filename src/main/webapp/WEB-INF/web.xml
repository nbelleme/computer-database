<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<!-- LISTENER -->
	<listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
	<!-- VIEW ALL COMPUTER -->
	<servlet>
		<servlet-name>ViewAll</servlet-name>
		<servlet-class>com.excilys.computer.ViewAll</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewAll</servlet-name>
		<url-pattern>/computer/view/all</url-pattern>
	</servlet-mapping>

	<!-- ADD COMPUTER -->
	<servlet>
		<servlet-name>AddComputer</servlet-name>
		<servlet-class>com.excilys.computer.AddComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddComputer</servlet-name>
		<url-pattern>/computer/add</url-pattern>
	</servlet-mapping>

	<!-- EDIT COMPUTER -->
	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>com.excilys.computer.Edit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/computer/edit/*</url-pattern>
	</servlet-mapping>

	<!-- DELETE COMPUTER -->
	<servlet>
		<servlet-name>Delete</servlet-name>
		<servlet-class>com.excilys.computer.Delete</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Delete</servlet-name>
		<url-pattern>/computer/delete</url-pattern>
	</servlet-mapping>


	<!-- ERROR PAGE : INTERNAL SERVER ERROR -->
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/views/500.jsp</location>
	</error-page>

	<!-- ERROR PAGE : PAGE NOT FOUND -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/404.jsp</location>
	</error-page>
</web-app>