<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- VIEW ONE COMPUTER -->
	<servlet>
		<servlet-name>ComputerServletView</servlet-name>
		<servlet-class>computer.ComputerServletView</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComputerServletView</servlet-name>
		<url-pattern>/computer/view/*</url-pattern>
	</servlet-mapping>

	<!-- VIEW ALL COMPUTERS -->
	<servlet>
		<servlet-name>ComputerServletViewAll</servlet-name>
		<servlet-class>computer.ComputerServletViewAll</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComputerServletViewAll</servlet-name>
		<url-pattern>/computer/view/all</url-pattern>
	</servlet-mapping>
	

	<!-- EDIT COMPUTER -->
	<servlet>
		<servlet-name>ComputerServletEdit</servlet-name>
		<servlet-class>computer.ComputerServletEdit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComputerServletEdit</servlet-name>
		<url-pattern>/computer/edit/*</url-pattern>
	</servlet-mapping>
	
	<!--  ADD COMPUTER -->
	<servlet>
		<servlet-name>AddComputer</servlet-name>
		<servlet-class>computer.AddComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddComputer</servlet-name>
		<url-pattern>/computer/add</url-pattern>
	</servlet-mapping>
	
</web-app>