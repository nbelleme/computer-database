
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- VIEW ALL COMPUTERS -->
	<servlet>
		<servlet-name>ViewAll</servlet-name>
		<servlet-class>computer.ViewAll</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewAll</servlet-name>
		<url-pattern>/computer/view/all</url-pattern>
	</servlet-mapping>

	<!-- EDIT COMPUTER -->
	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>computer.Edit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/computer/edit/*</url-pattern>
	</servlet-mapping>

	<!-- ADD COMPUTER -->
	<servlet>
		<servlet-name>AddComputer</servlet-name>
		<servlet-class>computer.AddComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddComputer</servlet-name>
		<url-pattern>/computer/add</url-pattern>
	</servlet-mapping>

	<!-- INTERNAL ERROR EXCEPTION -->
	<error-page>
		<error-code>500</error-code>
		<location>/views/500.jsp</location>
	</error-page>

	
	<!-- PAGE NOT FOUND -->
	<error-page>
	<error-code>404</error-code>
	<location>/WEB-INF/views/404.jsp</location>
	</error-page>

</web-app>